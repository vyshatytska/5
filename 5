Завдання 1
 
  
#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    double a;
    double b;
    double c;
    cout << "A ="; cin >> a;
    cout << "B ="; cin >> b;

    c = sqrt(a * a + b * b);
    cin.get();
    cout << "C = " << c << endl;
}

 
