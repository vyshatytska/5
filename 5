#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    double a;
    double n;
    double i;
    int c;
    cout << "N ="; cin >> n;

    a = (n/2)+(n/3)+(n/5)+(n/30)-(n/6)-(n/10)-(n/15);
    cin.get();
    c = n - a;
    cout << "C = " << c << endl;

}

 
Завдання 3
  
#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    double a;
    double b;
    double c, d, e, k, m, n;

    cout << "A ="; cin >> a;
    cout << "B ="; cin >> b;
    cout << "C ="; cin >> c;
    cout << "D ="; cin >> d;

    e = c - a;
    m= d - b;
    n = (e);
    k = (e, " ", m);
    cout << "N = " << n  << "  " << k << endl;
   
}
 
Завдання 4
 
 
#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    int n;
    double s;

    cout << "N ="; cin >> n;

    while (n > 0)
    {
        s += n % 10;
        n = n / 10;
    }
    cin.get();
    cout << "S = " << s << endl;
}
Завдання 5
 
#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    double n;
    {cout << "N ="; cin >> n;

    std::cout << "The next number for the number", n, "is",n+1,".";
    std::cout << "The previous number for the number", n, "is", n - 1, ".";
    }
}

